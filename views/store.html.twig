<html>
<head>
    <title>Shoe Stores</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <div class="container">
        <h1>{{ store.getName }}</h1>

        {% if brands is not empty %}
            <h3>Here are the brands offered at this store:</h3>
            <ul>
                {% for brand in brands %}
                    <li>{{ brand.getType }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Add a brand to this store:</h4>

        <form action='/add_brands' method='post'>
            <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
            <label for="brand_id">Select a brand</label>
            <select id='brand_id' name='brand_id' type='text'>
              {% for brand in all_brands %}
                <option value="{{ brand.getId }}"> {{ brand.getType }} </option>
              {% endfor %}
            </select>
            <button type='submit'>Add brand</button>
        </form>

        <p><a href="/stores/{{ store.getId }}/edit">Edit this store</a></p>

        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
