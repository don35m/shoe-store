<html>
<head>
    <title>Shoe Stores</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <h1>Brands</h1>

    {% if brands is not empty %}
        <p>Here are all your brands:</p>
        <ul>
            {% for brand in brands %}
                <li><a href="/brands/{{ brand.getId }}">{{ brand.getType }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/brands' method='post'>
        <label for='type'>Shoe Brand:</label>
        <input id='type' name='type' type='text'>

        <button type='submit'>Add brand</button>
    </form>

    <form action='/delete_brands' method='post'>
        <button type='submit'>Clear all Brands</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
